#!/usr/bin/env bash
set -euo pipefail

show_name="$1"
show_name="$(s media select-downloaded-tv-show "$show_name")"
filter="${2:-""}"

if [ -z "$filter" ]; then
    s media list-downloaded-tv-show-episodes "$show_name" |
        fzf
else
    s media list-downloaded-tv-show-episodes "$show_name" |
        rg -i "$filter" |
        fzf
fi
