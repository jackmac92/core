#!/usr/bin/env bash

printf "" >$CBI_HOSTALIASES
vaultIp=$(direnv exec ~/cbinsights dig +short $VAULT_HOST | rg "^\d" | head -n 1)
consulIp=$(direnv exec ~/cbinsights dig +short $CONSUL_HOST | rg "^\d" | head -n 1)
printf "%s\tvault.cbinsights.local\n" $vaultIp >>$CBI_HOSTALIASES
printf "%s\tconsul.cbinsights.local\n" $consulIp >>$CBI_HOSTALIASES
