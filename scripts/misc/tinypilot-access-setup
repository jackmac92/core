#!/usr/bin/env bash
set -uo pipefail

sudo howdy disable 1 || true
rm -f ~/.config/monitors.xml
cp ~/monitors.xml-tinypilot-only ~/.config/monitors.xml
sudo rm -f ~gdm/.config/monitors.xml

sudo cp ~/.config/monitors.xml ~gdm/.config/
s misc makvm-shutdown
echo "Rebooting in 7 sec..."
sudo shutdown -r +7
