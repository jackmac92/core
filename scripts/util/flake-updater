#!/usr/bin/env bash
set -euo pipefail

cd ~/.config/nixpkgs
nix flake update
chezmoi add --create flake.lock
trap "git -C ~/.local/share/chezmoi/ checkout -- private_dot_config/exact_nixpkgs/create_flake.lock; rm -f ~/.config/nixpkgs/flake.lock; exit 1" ERR

cd

s dot run-script home_manager_update

cd ~/.local/share/chezmoi/private_dot_config/exact_nixpkgs
git add *flake*
git commit -m "flake update" && {
    git pull --no-edit
    git push --recurse-submodules=on-demand
}
