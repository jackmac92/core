#!/usr/bin/env doomscript

(setq curr-doomdir (getenv "DOOMDIR"))
(setq use-debug (getenv "DEBUG"))
(setq emacs-server-name (getenv "EMACS_SOCKET_NAME"))

(setq buttercup-args
      (list
       (when (getenv "NOCOLOR")
         "--no-color")
       "--traceback"
       "pretty"
       (expand-file-name "tests.d/unit" curr-doomdir)
       (expand-file-name "modules/ui/generic-popup" curr-doomdir)))

(cd curr-doomdir)

(defcli! buttercup ()
         (when use-debug
           (doom-debug-mode +1))
         (setq server-name emacs-server-name)
         (require 'doom-start)
         (require 'buttercup)
         ;; prepend . to load path
         (setq load-path (cons "." load-path))
         (setq command-line-args-left
               (-non-nil buttercup-args))

         (condition-case err
             (buttercup-run-discover)
           (progn
             (print! "Failed with error: %S" err)
             (exit! 127))))

(run! "buttercup")

